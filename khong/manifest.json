{
  "manifest_version": 3,
  "name": "TXT to Card Grid + AI Studio (Modular v2)",
  "version": "1.6",
  "description": "Processes a text file into clickable cards that automate tasks in new AI Studio tabs and monitors the results.",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/audio_injector.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [{
    "resources": [
      "processor.html",
      "processor.css",
      "ui/*.js",
      "lib/*.js"
    ],
    "matches": ["<all_urls>"]
  }]
}