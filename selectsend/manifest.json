{
  "manifest_version": 3,
  "name": "AI Studio Reader with Audio Capture",
  "version": "1.0",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "tabCapture"],
  "host_permissions": [
    "https://aistudio.google.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["page.html", "popup.html"],
    "matches": ["<all_urls>"]
  }],
  "incognito": "split"
}